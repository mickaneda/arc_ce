[common]
hostname="<%= @hostname %>"
globus_tcp_port_range="<%= @globus_port_range.join(',') %>"
globus_udp_port_range="<%= @globus_port_range.join(',') %>"

x509_user_key="/etc/grid-security/hostkey.pem"
x509_user_cert="/etc/grid-security/hostcert.pem"
x509_cert_dir="/etc/grid-security/certificates"
gridmap="<%= @grid_mapfile %>"
lrms="<%= @lrms %>"
<% if @enable_perflog_reporting != '' -%>
enable_perflog_reporting="<%= @enable_perflog_reporting %>"
<% end -%>
<% if @perflogdir != '' -%>
perflogdir="<%= @perflogdir %>"
<% end -%>
<% if @lrms == 'pbs' -%>
<% if @pbs_bin_path != '' -%>
pbs_bin_path="<%= @pbs_bin_path %>"
<% end -%>
<% if @pbs_log_path != '' -%>
pbs_log_path="<%= @pbs_log_path %>"
<% end -%>
<% end -%>
